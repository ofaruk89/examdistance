# --- OpenSSL SAN Yapılandırma Dosyası ---

[ req ]
default_bits        = 2048
default_keyfile     = privkey.pem
distinguished_name  = req_distinguished_name
req_extensions      = v3_req
x509_extensions     = v3_req   # Self-signed yaparken de burayı kullanması için
string_mask         = utf8only
prompt              = yes      # Soru sormayı etkinleştirir

# --- Soru Sorulacak Kısım (Kimlik Bilgileri) ---
[ req_distinguished_name ]
countryName                     = Country Name (2 letter code)
countryName_default             = TR
countryName_min                 = 2
countryName_max                 = 2

stateOrProvinceName             = State or Province Name (full name)
stateOrProvinceName_default     = Istanbul

localityName                    = Locality Name (eg, city)
localityName_default            = Sisli

0.organizationName              = Organization Name (eg, company)
0.organizationName_default      = Sirketim Ltd

organizationalUnitName          = Organizational Unit Name (eg, section)
organizationalUnitName_default  = IT

commonName                      = Common Name (e.g. server FQDN or YOUR name)
commonName_max                  = 64

emailAddress                    = Email Address
emailAddress_max                = 64

# --- Eklentiler (SAN Ayarları Buradan Çağrılır) ---
[ v3_req ]
basicConstraints = CA:FALSE
keyUsage = nonRepudiation, digitalSignature, keyEncipherment
# SAN (Subject Alternative Name) burada devreye giriyor:
subjectAltName = @alt_names

# --- SAN Listesi (Burayı Düzenleyeceksiniz) ---
[ alt_names ]
# Buraya istediğiniz kadar DNS veya IP ekleyebilirsiniz.
DNS.1 = ana-domain.com
DNS.2 = www.ana-domain.com
DNS.3 = api.baska-domain.com
DNS.4 = *.wildcard-ornek.com